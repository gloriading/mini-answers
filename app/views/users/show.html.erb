<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h3><%= @user.name %></h3>
      <h5> <%= @user.email %> </h5>
      <p class="mt-5"><small><b>Created at:</b> <%= @user.created_at.strftime('%e %b %Y %H:%M %p') %></small> <small class="ml-3"><b>Updated at:</b> <%= @user.updated_at.strftime('%e %b %Y %H:%M %p') %></small></p>

    </section>
  </aside>
</div>
