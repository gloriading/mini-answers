
<div class="container mt-4">
  <%= form_for @question do |f| %>
    <%= render 'shared/error_messages', target: @question %>

    <div class="form-group">
      <%= f.label 'title' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label 'content' %>
      <%= f.text_area :content, rows: 5, class: 'form-control' %>
    </div>

    <%= submit_tag "#{@question.new_record? ? 'Create' : 'Update'} Question", class: 'btn btn-secondary btn-sm questionBtn' %>

  <% end %>

</div>
